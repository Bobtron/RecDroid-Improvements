 - com.github.bumptech.glide:compiler [4.4.0 -&gt; 4.5.0]
 - com.crashlytics.sdk.android:crashlytics [2.7.1 -&gt; 2.8.0]
 - com.google.dagger:dagger [2.13 -&gt; 2.14.1]
